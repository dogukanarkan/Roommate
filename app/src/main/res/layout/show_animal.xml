<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="99dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/animalImage"
                android:layout_alignTop="@+id/textAnimal"
                android:layout_marginStart="22dp"
                android:text="Cins:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/animalImage"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="87dp"
                android:src="@drawable/default_rehoming_icon" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="99dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:text="Hayvan: "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="99dp"
                android:layout_height="35dp"
                android:layout_above="@+id/textView6"
                android:layout_alignStart="@+id/textView8"
                android:text="YaÅŸ: "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="99dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textMonth"
                android:text="Referans Kodu: "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="99dp"
                android:layout_height="35dp"
                android:layout_alignBaseline="@+id/textGender"
                android:layout_alignBottom="@+id/textGender"
                android:layout_alignStart="@+id/textView7"
                android:text="Cinsiyet: "
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textAnimal"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_below="@+id/animalImage"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/textView8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textRace"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_toEndOf="@+id/textView8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textGender"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/textMonth"
                android:layout_below="@+id/textRace"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textMonth"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/textRefCode"
                android:layout_below="@+id/textGender"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textRefCode"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_toEndOf="@+id/textView6"
                android:textStyle="bold" />


            <Button
                android:id="@+id/messageButton"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_alignEnd="@+id/textRefCode"
                android:layout_below="@+id/textRefCode"
                android:layout_marginEnd="17dp"
                android:background="@drawable/buttonshapes"
                android:shadowColor="#8A6367"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="5"
                android:text="Mesaj"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
                android:textSize="15dp">
            </Button>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>